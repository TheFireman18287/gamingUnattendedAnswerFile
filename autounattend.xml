<?xml version="1.0" encoding="utf-8"?>
<unattend xmlns="urn:schemas-microsoft-com:unattend">
  <settings pass="windowsPE">
    <component name="Microsoft-Windows-International-Core-WinPE" processorArchitecture="amd64" publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS" xmlns:wcm="http://schemas.microsoft.com/WMIConfig/2002/State">
      <InputLocale>en-US</InputLocale>
      <SystemLocale>en-US</SystemLocale>
      <UILanguage>en-US</UILanguage>
      <UILanguageFallback>en-US</UILanguageFallback>
      <UserLocale>en-US</UserLocale>
    </component>
    <component name="Microsoft-Windows-Setup" processorArchitecture="amd64" publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS" xmlns:wcm="http://schemas.microsoft.com/WMIConfig/2002/State">
      <UserData>
        <ProductKey>
          <WillShowUI>OnError</WillShowUI>
        </ProductKey>
        <AcceptEula>true</AcceptEula>
        <FullName>Gamer</FullName>
        <Organization>Performance Gaming</Organization>
      </UserData>
    </component>
  </settings>

  <settings pass="specialize">
    <component name="Microsoft-Windows-Shell-Setup" processorArchitecture="amd64" publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS" xmlns:wcm="http://schemas.microsoft.com/WMIConfig/2002/State">
      <ProductKey>XXXXX-XXXXX-XXXXX-XXXXX-XXXXX</ProductKey>
      <ComputerName>GamingPC</ComputerName>
      <TimeZone>Pacific Standard Time</TimeZone>
    </component>
  </settings>

  <settings pass="oobeSystem">
    <component name="Microsoft-Windows-Shell-Setup" processorArchitecture="amd64" publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS" xmlns:wcm="http://schemas.microsoft.com/WMIConfig/2002/State">
      <OOBE>
        <HideEULAPage>true</HideEULAPage>
        <NetworkLocation>Home</NetworkLocation>
        <ProtectYourPC>1</ProtectYourPC>
      </OOBE>
      <UserAccounts>
        <AdministratorPassword>
          <Value>Password123</Value>
          <PlainText>true</PlainText>
        </AdministratorPassword>
      </UserAccounts>
      <AutoLogon>
        <Username>Administrator</Username>
        <Password>
          <Value>Password123</Value>
          <PlainText>true</PlainText>
        </Password>
        <Enabled>true</Enabled>
      </AutoLogon>
      <FirstLogonCommands>
        <!-- Power Management: Set Ultimate Performance Mode -->
        <SynchronousCommand wcm:action="add">
          <Order>1</Order>
          <CommandLine>powercfg /setactive SCHEME_MAX</CommandLine>
          <Description>Set Ultimate Performance Mode</Description>
        </SynchronousCommand>

        <!-- Disable Memory Integrity -->
        <SynchronousCommand wcm:action="add">
          <Order>2</Order>
          <CommandLine>powershell -command "New-ItemProperty -Path 'HKLM:\SYSTEM\CurrentControlSet\Control\DeviceGuard\Scenarios\HypervisorEnforcedCodeIntegrity' -Name 'Enabled' -PropertyType DWord -Value 0"</CommandLine>
          <Description>Disable Memory Integrity</Description>
        </SynchronousCommand>

        <!-- Bloatware Removal - Keep Store and Xbox Game Bar -->
        <SynchronousCommand wcm:action="add">
          <Order>3</Order>
          <CommandLine>powershell -command "Get-AppxPackage -AllUsers | Where-Object {$_.Name -notlike '*Microsoft.Store*' -and $_.Name -notlike '*XboxGameBar*'} | Remove-AppxPackage -AllUsers"</CommandLine>
          <Description>Remove Selected Bloatware</Description>
        </SynchronousCommand>

        <!-- Disable Storage Sense -->
        <SynchronousCommand wcm:action="add">
          <Order>4</Order>
          <CommandLine>powershell -command "New-ItemProperty -Path 'HKCU:\SOFTWARE\Microsoft\Windows\CurrentVersion\StorageSense\Parameters\StoragePolicy' -Name '01' -PropertyType DWord -Value 0"</CommandLine>
          <Description>Disable Storage Sense</Description>
        </SynchronousCommand>

        <!-- Registry Tweaks for Gaming Performance -->
        <SynchronousCommand wcm:action="add">
          <Order>5</Order>
          <CommandLine>powershell -command "New-ItemProperty -Path 'HKCU:\Control Panel\Desktop' -Name 'UserPreferencesMask' -PropertyType Binary -Value ([byte[]](0x90,0x12,0x03,0x80,0x10,0x00,0x00,0x00))"</CommandLine>
          <Description>Disable Animations</Description>
        </SynchronousCommand>

        <!-- Power Plan Adjustments for High-Performance Gaming -->
        <SynchronousCommand wcm:action="add">
          <Order>6</Order>
          <CommandLine>powercfg -change -disk-timeout-ac 0</CommandLine>
          <Description>Disable Hard Disk Timeout</Description>
        </SynchronousCommand>
        <SynchronousCommand wcm:action="add">
          <Order>7</Order>
          <CommandLine>powercfg -setacvalueindex SCHEME_CURRENT SUB_PROCESSOR PROCTHROTTLEMAX 100</CommandLine>
          <Description>Set Processor Max to 100%</Description>
        </SynchronousCommand>
        <SynchronousCommand wcm:action="add">
          <Order>8</Order>
          <CommandLine>powercfg -setacvalueindex SCHEME_CURRENT SUB_PROCESSOR PROCTHROTTLEMIN 100</CommandLine>
          <Description>Set Processor Min to 100%</Description>
        </SynchronousCommand>
        <SynchronousCommand wcm:action="add">
          <Order>9</Order>
          <CommandLine>powercfg -setacvalueindex SCHEME_CURRENT SUB_PCIEXPRESS LSPMSETTING 0</CommandLine>
          <Description>Disable PCI Express Link State Power Management</Description>
        </SynchronousCommand>

        <!-- Enable Game Mode and Hardware-Accelerated GPU Scheduling -->
        <SynchronousCommand wcm:action="add">
          <Order>10</Order>
          <CommandLine>powershell -command "New-ItemProperty -Path 'HKCU:\Software\Microsoft\GameBar' -Name 'AllowAutoGameMode' -PropertyType DWord -Value 1"</CommandLine>
          <Description>Enable Game Mode</Description>
        </SynchronousCommand>
        <SynchronousCommand wcm:action="add">
          <Order>11</Order>
          <CommandLine>powershell -command "New-ItemProperty -Path 'HKLM:\SYSTEM\CurrentControlSet\Control\GraphicsDrivers' -Name 'HwSchMode' -PropertyType DWord -Value 2"</CommandLine>
          <Description>Enable Hardware-Accelerated GPU Scheduling</Description>
        </SynchronousCommand>

        <!-- Disable Mouse Acceleration -->
        <SynchronousCommand wcm:action="add">
          <Order>12</Order>
          <CommandLine>powershell -command "New-ItemProperty -Path 'HKCU:\Control Panel\Mouse' -Name 'MouseSpeed' -PropertyType String -Value 0"</CommandLine>
          <Description>Disable Mouse Acceleration</Description>
        </SynchronousCommand>

        <!-- Disable Delivery Optimization -->
        <SynchronousCommand wcm:action="add">
          <Order>13</Order>
          <CommandLine>powershell -command "New-ItemProperty -Path 'HKLM:\SYSTEM\CurrentControlSet\Services\DoSvc' -Name 'Start' -PropertyType DWord -Value 4"</CommandLine>
          <Description>Disable Delivery Optimization</Description>
        </SynchronousCommand>

        <!-- Set Network Throttling Index for Low Latency -->
        <SynchronousCommand wcm:action="add">
          <Order>14</Order>
          <CommandLine>powershell -command "New-ItemProperty -Path 'HKLM:\SOFTWARE\Microsoft\Windows NT\CurrentVersion\Multimedia\SystemProfile' -Name 'NetworkThrottlingIndex' -PropertyType DWord -Value 0xffffffff"</CommandLine>
          <Description>Disable Network Throttling</Description>
        </SynchronousCommand>

        <!-- Disable Visual Effects for Performance -->
        <SynchronousCommand wcm:action="add">
          <Order>15</Order>
          <CommandLine>powershell -command "New-ItemProperty -Path 'HKCU:\Software\Microsoft\Windows\CurrentVersion\Explorer\VisualEffects' -Name 'VisualFXSetting' -PropertyType DWord -Value 2"</CommandLine>
          <Description>Disable Visual Effects</Description>
        </SynchronousCommand>

        <!-- Set Custom Page File Size (1-4 GB) -->
        <SynchronousCommand wcm:action="add">
          <Order>16</Order>
          <CommandLine>powershell -command "wmic pagefileset where name='C:\\pagefile.sys' set InitialSize=1024,MaximumSize=4096"</CommandLine>
          <Description>Set Custom Page File Size</Description>
        </SynchronousCommand>
      </FirstLogonCommands>
    </component>
  </settings>
</unattend>
